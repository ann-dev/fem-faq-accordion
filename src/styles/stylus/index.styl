/*
 * Global styles
 */

body
    align-items: center
    box-sizing: border-box
    background: hsl(273, 75%, 66%)
    background: linear-gradient(0deg, hsl(240, 73%, 65%) 10%, hsl(273, 75%, 66%) 100%)
    color: hsl(237, 12%, 33%)
    display: flex
    flex-direction: column
    font-family: 'Kumbh Sans', sans-serif
    -moz-osx-font-smoothing:grayscale
    -webkit-font-smoothing:antialiased
    justify-content: center
    height: auto
    min-height: 100vh
    p
        margin: 0
    a
        text-decoration: none

*,
*:before,
*:after
    box-sizing:inherit

/*
 * Accordion styles
 */

.wrapper
    background: white
    border-radius: 25px
    box-shadow:
        0 2.8px 2.2px rgba(0, 0, 0, 0.02),
        0 6.7px 5.3px rgba(0, 0, 0, 0.028),
        0 12.5px 10px rgba(0, 0, 0, 0.035),
        0 22.3px 17.9px rgba(0, 0, 0, 0.042),
        0 41.8px 33.4px rgba(258, 73%, 47%, 0.05),
        0 100px 80px hsla(258, 73%, 47%, .5)
    min-height: 535px
    margin: 155px auto 50px
    padding: 0 25px 30px
    position: relative
    width: 325px

.drawing
    left: calc((325px - 245px) / 2)
    max-width: 245px
    position: absolute
    top: -110px

.drawing-shadow
    left: 40px
    position: absolute
    top: 0

.text-wrapper
    margin-top: 138px
    h1
        color: hsl(238, 29%, 16%)
        font-size: 33px
        margin-bottom: 16px;
        text-align: center

.accordion
    border-bottom: 1px solid hsl(240, 5%, 91%)

.accordion-top
    align-items: center
    border: none
    display: flex
    font-size: 13px
    justify-content: space-between
    padding: 19px 0
    text-align: left
    width: 100%
    &::-webkit-details-marker
        display: none
    &:focus:not(:focus-visible)
        outline: none
    &:hover
        cursor: pointer

.accordion-icon
    height: 7px
    width: 11px

.accordion-bottom
    font-size: 12px
    line-height: 18px
    margin-bottom: 19px
    max-width: 245px

.accordion[open]
    .accordion-title
        font-weight: 700

.accordion[open]
    .accordion-icon
        transform: rotate(180deg)

.toggle-text
    color: hsl(240, 6%, 50%)

.attribution
    z-index: 2
    p
        color: white
        font-size: 11px
        margin-top: 5px
        text-align: center
    a
        color: white
        font-weight: 700
        &:hover
            text-decoration: underline
